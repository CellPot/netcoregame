@page "{id}"
@model GameUserDB.Pages.UserManage.EditUserModel
@{
    ViewData["Title"] = "Изменение";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-route-id="@Model.ApUser.Id">
            <h3>Изменить данные о пользователе @Model.Message</h3>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" value="@Model.ApUser.Email.ToString()" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Sequence"></label>
                <input asp-for="Input.Sequence" class="form-control" value="@Model.ApUser.Sequence.ToString()" />
                <span asp-validation-for="Input.Sequence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Score"></label>
                <input asp-for="Input.Score" class="form-control" value="@Model.ApUser.Score" />
                <span asp-validation-for="Input.Score" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info" asp-route-id="@Model.ApUser.Id">Сохранить</button>
            <a asp-page="ChangeUserPass" class="btn btn-warning" asp-route-id="@Model.ApUser.Id">Изменить пароль</a>
        </form>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


